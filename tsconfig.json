{
  "compilerOptions": {
    "target": "esnext",                   // compile ke ESNext
    "module": "nodenext",                 // module system untuk Node ESM
    "moduleResolution": "nodenext",       // resolve module ala Node
    "rootDir": "./scripts/src",           // root source
    "outDir": "./scripts/dist",           // hasil compile
    "declaration": true,                  // generate .d.ts
    "declarationMap": true,               // generate .d.ts.map
    "sourceMap": true,                    // generate .js.map
    "verbatimModuleSyntax": true,         // jangan ubah syntax import/export
    "isolatedModules": true,              // setiap file bisa compile sendiri
    "strict": true,                       // all strict checks
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noPropertyAccessFromIndexSignature": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,             // import CommonJS lebih nyaman
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,                // skip check .d.ts dependencies
    "types": ["node"],                   // pakai Node types
    "lib": ["esnext"],                   // library untuk environment modern
  },
  "include": ["scripts/src/**/*.ts", "scripts/src/**/*.tsx"],
  "exclude": ["scripts/dist", "node_modules"]
}
